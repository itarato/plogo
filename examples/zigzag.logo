fn line(size, limit, angle) {
    if (size > limit) {
        zigzag(size / 3, limit, angle)
    } else {
        f(size)
    }
}

fn zigzag(size, limit, angle) {
    line(size, limit, angle)
    l(angle)
    line(size, limit, angle)
    r(angle)
    line(size, limit, angle)
    r(angle)
    line(size, limit, angle)
    l(angle)
    line(size, limit, angle)
}

intvar("size", 10, 300, 100)
intvar("limit", 5, 20, 10)
intvar("angle", 0, 180, 90)

zigzag(size, limit, angle)
