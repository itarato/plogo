fn leaf(size, angle, iter, dec, limit, thickness) {
  x = getx()
  y = gety()
  oldangle = getangle()

  loop (iter) {
    t(thickness)
    f(size)
    r(angle)
    size = size * dec
    thickness = thickness * 0.9

    if (size > limit) {
      l(90)
      leaf(size * 0.5, angle, iter * 0.7, dec, limit, thickness * 0.6)
      l(180)
      leaf(size * 0.5, angle, iter * 0.7, dec, limit, thickness * 0.6)
      l(90)
    }
  }

  pos(x, y)
  angle(oldangle)
}

intvar("size", 10, 300, 120)
intvar("angle", 0, 120, 10)
intvar("iter", 2, 26, 18)
floatvar("limit", 1, 5, 1)
floatvar("dec", 0.2, 1, 0.85)

leaf(size, angle, iter, dec, limit, 10)
